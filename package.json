{
  "name": "api-snapshot-verifier",
  "version": "1.1.0",
  "description": "Track & Diff Real-Time API Changes for Frontend Stability",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "server": "node dist/web/start-server.js",
    "dev:server": "tsx watch src/web/start-server.ts",
    "dev:server:alt": "PORT=3301 CORS_ORIGIN=http://localhost:3300 tsx watch src/web/start-server.ts",
    "dev:frontend": "cd src/web/frontend && npm run dev",
    "dev:frontend:alt": "cd src/web/frontend && VITE_BACKEND_URL=http://localhost:3301 VITE_FRONTEND_PORT=3300 npm run dev",
    "dev:all": "concurrently \"npm run dev:server\" \"npm run dev:frontend\"",
    "dev:all:alt": "concurrently \"npm run dev:server:alt\" \"npm run dev:frontend:alt\"",
    "web": "concurrently \"PORT=3301 CORS_ORIGIN=http://localhost:3300 npm run dev:server\" \"cd src/web/frontend && npm run dev -- --port 3300\"",
    "web:dev": "npm run web",
    "start:web": "npm run web",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "migrate:db": "node dist/scripts/migrate-to-database.js",
    "migrate:db:dry": "node dist/scripts/migrate-to-database.js --dry-run",
    "migrate:db:cleanup": "node dist/scripts/migrate-to-database.js --cleanup",
    "migrate:snapshots": "node scripts/migrate-snapshots-structure.js",
    "migrate:snapshots:dry": "node scripts/migrate-snapshots-structure.js --dry-run --verbose",
    "storage:stats": "node scripts/storage-stats.js",
    "postinstall": "cd src/web/frontend && npm install",
    "clean": "rm -rf dist node_modules package-lock.json",
    "clean:frontend": "cd src/web/frontend && rm -rf dist node_modules package-lock.json",
    "clean:db": "rm -f snapshots.db snapshots.db-journal",
    "clean:snapshots": "rm -rf snapshots",
    "clean:all": "npm run clean && npm run clean:frontend && npm run clean:db && npm run clean:snapshots",
    "clean:code": "npm run clean && npm run clean:frontend",
    "reinstall": "npm run clean:code && npm install",
    "reset:db": "npm run clean:db && echo 'Database removed. It will be recreated on next server start.'",
    "reset:all": "npm run clean:all && npm install && echo 'Full reset complete. Start the server to create a fresh database.'"
  },
  "bin": {
    "api-snapshot": "./dist/cli.js"
  },
  "keywords": [
    "api",
    "testing",
    "snapshot",
    "diff",
    "frontend",
    "backend"
  ],
  "author": "Volodymyr Pasichnyk <vladimir.pasechnik@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@fastify/compress": "^7.0.3",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/static": "^7.0.4",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^4.2.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/inquirer": "^9.0.8",
    "@types/swagger-jsdoc": "^6.0.4",
    "ajv": "^8.12.0",
    "axios": "^1.6.0",
    "better-sqlite3": "^11.10.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "diff": "^5.1.0",
    "dotenv": "^16.5.0",
    "fastify": "^4.29.1",
    "fastify-socket.io": "^5.1.0",
    "fs-extra": "^11.1.1",
    "inquirer": "^12.6.3",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-parser": "^10.0.3",
    "yaml": "^2.8.0"
  },
  "devDependencies": {
    "@types/diff": "^5.0.0",
    "@types/fs-extra": "^11.0.0",
    "@types/node": "^20.8.0",
    "@types/yaml": "^1.9.6",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.0.0",
    "nodemon": "^3.1.10",
    "tsx": "^3.14.0",
    "typescript": "^5.2.0",
    "vitest": "^0.34.0"
  }
}

# API Snapshot Verifier Environment Configuration

# ========================================
# Backend Server Configuration
# ========================================
PORT=3301
HOST=localhost
CONFIG_PATH=./api-snapshot.config.json
LOG_LEVEL=INFO
NODE_ENV=development

# ========================================
# CORS Configuration (comma-separated origins)
# ========================================
CORS_ORIGIN=http://localhost:3300,http://localhost:5173

# ========================================
# Security Settings
# ========================================
ENABLE_RATE_LIMIT=false

# ========================================
# Frontend Configuration
# ========================================
VITE_BACKEND_URL=http://localhost:3301
VITE_FRONTEND_PORT=3300

# ========================================
# Protocol Configuration
# ========================================
# Change to https for production deployments
PROTOCOL=http

